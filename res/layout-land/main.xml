<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
   	android:background="@color/white">
   	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
    	android:text="@string/hello"
	    android:textSize = "32px"
 	    android:gravity ="center"
   		android:padding="20px"
   		android:textColor="@color/white"
	   	android:background="@color/theme1"
	    />    
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight = "0.8"
		android:layout_gravity = "top"
  		android:gravity = "center"
		android:padding="20px"	 >

		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/welcome_text"
  		  	android:textSize = "18px"
    		android:textColor="@color/text_default"
		    android:gravity = "center"
			android:layout_marginBottom="20px"
		    />
		    
   		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:layout_marginBottom = "20px"
		    android:text="@string/description"
  		  	android:textSize = "18px"
    		android:textColor="@color/text_default"
		    android:gravity = "center"
			/>
		<LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height = "wrap_content" >	
	    	<Button android:text="@string/join_button" android:textSize = "18px"
	    			android:id="@+id/launch_search" android:layout_width="fill_parent" 
	    			android:layout_height="wrap_content" android:layout_weight="0.33"></Button>
		    <Button android:text="@string/create_button" android:textSize = "18px"
	    			android:id="@+id/launch_create" android:layout_width="fill_parent" 
	    			android:layout_height="wrap_content" android:layout_weight="0.33"></Button>
		    <Button android:text="@string/about_button" android:textSize = "18px"
	    			android:id="@+id/launch_about" android:layout_width="fill_parent" 
	    			android:layout_height="wrap_content" android:layout_weight="0.33"></Button>
	   	</LinearLayout>
    </LinearLayout>
	<include layout = "@layout/footer" android:id= "@+id/footer" />
</LinearLayout>
